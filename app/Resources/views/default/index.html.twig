{% extends 'base.html.twig' %}

{% block title %}GroBlog - Le blog de Groland{% endblock %}

{% block body %}

    <!-- Main Content -->
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">

{% for i in 0..10 %}
{% if posts[i] is defined %}
          <div class="post-preview">
            <a href="{{ path('Post', {'idPost' : posts[i].id})}}">
              <h2 class="post-title">
                {{ posts[i].title }}
              </h2>
              <h3 class="post-subtitle">
                {{ posts[i].content|slice(0, 100) }}...
              </h3>
            </a>
            <p class="post-meta">Post√© par
              <a href="#">{{ posts[i].author }}</a>
              le {{ posts[i].published|date("d/m/Y") }}</p>
          </div>
          <hr>
{% endif %}
{% endfor %}
          

{% endblock %}
