<!DOCTYPE html>
<html>

    <head>
        <meta charset="UTF-8">
        <meta name="description" content="">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="author" content="Glarbalete and Nstadler">
    
        <title>
            {% block title %}{% endblock %}
        </title>

        {% block stylesheets %}
            <!-- Favicon -->
            <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

            <!-- Bootstrap core CSS -->
            <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet">

            <!-- Custom fonts for this template -->
            <link href="{{ asset('css/font-awesome.min.css') }}" rel="stylesheet" type="text/css">
            <link href='https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
            <link href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>

            
            <link href="{{ asset('css/colorlib_loginForm.css') }}" rel="stylesheet">

            <!-- Custom styles for this template -->
            <link href="{{ asset('css/clean-blog.min.css') }}" rel="stylesheet">

        {% endblock %}
        
    </head>

    <body> 
        

        
        {% block nav %}
            <!-- Navigation -->
            <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
                <div class="container">
                    <a class="navbar-brand" href="/login">{% if user is defined %}{{user}} <a href="/logout"><img src="{{asset('img/logoutWhite24x24.png') }}" alt="" /></a>{% else %}{% trans %} Connection {% endtrans %}{% endif %}</a>
                    <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    Menu
                    <i class="fa fa-bars"></i>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                        <a class="nav-link" href="{{ path('homepage') }}"><img src="{{ asset('img/homepageLogoGrey24x24.png') }}" alt="" /></a>
                        </li>
                        {% if user is defined %}
                            <li class="nav-item">
                            <a class="nav-link" href="{{ path('createPage') }}">{% trans %}Create a post{% endtrans %}</a>
                            </li>
                            <li class="nav-item">
                            <a class="nav-link" href="{{ path('myposts') }}">{% trans %}My posts{% endtrans %}</a>
                            </li>
                        {% endif %}
                    </ul>
                    </div>
                </div>
            </nav>
        {% endblock %}

        {% block header %}
            <!-- Page Header -->
            <header class="masthead" style="background-image: url({{ asset('img/Groland-President.jpg') }})">
            <div class="overlay"></div>
            <div class="container">
                <div class="row">
                <div class="col-lg-8 col-md-10 mx-auto">
                    <div class="site-heading">
                    <h1>GroBlog</h1>
                    <span class="subheading">{% trans %}World's best country's blog{% endtrans %}</span>
                    </div>
                </div>
                </div>
            </div>
            </header>
        {% endblock %}

        {% block body %}

        {% endblock %}

        {% block footer %}
            <footer>
            <div class="container">
                <div class="row">
                <div class="col-lg-8 col-md-10 mx-auto">
                    
                    <p class="copyright text-muted">Copyright &copy; GroBlog 2017</p>
                </div>
                </div>
            </div>
            </footer>
        {% endblock %}

        {% block javascripts %}

                <!-- Bootstrap core JavaScript -->
            <script src="{{ asset('js/jquery/jquery.min.js') }}"></script>
            <script src="{{ asset('js/bootstrap.bundle.min.js') }}"></script>

            <!-- Custom scripts for this template -->
            <script src="{{ asset('js/clean-blog.min.js') }}"></script>

            <script src="{{ asset('js/colorlib_loginForm.js') }}"></script>


        {% endblock %}
        
    </body>

</html>
