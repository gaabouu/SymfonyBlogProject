{% trans_default_domain 'FOSUserBundle' %}



{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<div class="container">
    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
            <div class="login-page">
                <div class="form">
                    <form action="{{ path("fos_user_security_check") }}" method="post" class="login_form">
                        {% if csrf_token %}
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                        {% endif %}

                        <label for="username" color="black">{{ 'security.login.username'|trans }}</label>
                        <input autofocus type="text" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="{{ 'security.login.username'|trans }}"/><br>

                        <label for="password">{{ 'security.login.password'|trans }}</label>
                        <input type="password" id="password" name="_password" required="required" placeholder="{{ 'security.login.password'|trans }}"/><br>

                        <button type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" >
                        {{ 'security.login.submit'|trans }}
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
       
